{
  "name": "vue-components-starter",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "commit": "cz -a",
    "workspaces:info": "yarn workspaces info",
    "prettier": "prettier --write ./packages/",
    "lint": "eslint --ext .js,.ts,.vue ./packages/",
    "lint-fix": "eslint --ext .js,.ts,.vue ./packages/  --fix",
    "diff": "lerna diff",
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "new": "ts-node --project ./scripts/tsconfig.json ./scripts/new.ts",
    "playground": "webpack serve --config=./playground/webpack.playground.config.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/node": "^14.14.36",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@vue/babel-plugin-jsx": "^1.0.3",
    "@vue/compiler-sfc": "^3.0.7",
    "@vue/component-compiler-utils": "^3.2.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "css-loader": "^5.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vue": "^3.0.7",
    "vue-loader": "^16.1.2",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "yargs": "^16.2.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,vue}": [
      "yarn run lint-fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
