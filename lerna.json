{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
